@import './mixin.scss';
@import './login.scss';
@import './box_receive.scss';
body {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  font-family: Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, Arial, sans-serif;
  font-size: .3rem;
}
html {
  box-sizing: border-box;
  
}
*,
*:before,
*:after {
  box-sizing: inherit;
}
//*
.xinhao {
    color: red;
}
//选项卡
.yd-tab-panel {
    background: none;
}
.app-container {
    height: 100vh;
    background: #fff;
    .weui-btn_primary {
//      background: #29abe2;
    }
    .weui-cell {
        padding: 15px 15px;
    }
}
//input文本框文字
.mint-field-core {
    text-align: right !important;
}
//表单内文本框
.form-validate {
    .mint-cell-wrapper {
        padding: 0;
    }
}

//搜索框
.yd-search-input {
    background: #fcf9fe;
}
.yd-search-input>.search-input {
    height: 40px;
    border-radius: 15px;
    border: 1px solid #e0e0e0;
}

//还款申请(池)
.repay-apply {
    .repay-top {
        margin: 11px 15px;
    }
    .check-rapay {
        display: inline-flex;
        background: #fff;
        width: 100%;
        justify-content: space-around;
        border-top: 1px solid #fcf9fe;
        border-bottom: 1px solid #fcf9fe;
    }
    .mint-cell-wrapper,.mint-cell:last-child {
        background-image: none;
        border: 0;
    }
}
//融资申请(单)
.sigle-apply {
    .mint-cell-wrapper,.mint-cell:last-child {
        background-image: none;
        border: 0;
        padding: 0;
    }
    .mint-checklist-label {
        padding: 0;
    }
    .list-footer {
        display: inline-flex;
        width: 100%;
        border-top: 1px solid #f6f8fa;
        justify-content: space-between;
        align-items: baseline;
        .mint-button {
            height: 35px;
        }
    }
    .btn-footer {
        width: 100%;
        position: fixed;
        bottom: 0;
        .mint-button {
            height: 50px;
        }
    }
}
//融资申请(池)
.financing-apply {
    .yd-cell {
        background: none;
    }
    .card {
        margin-bottom: .2rem;
        background: #fff;
    }
    .card-title {
        .yd-cell-arrow:after {
            content: none;
        }
    }
    .input-text {
        .yd-cell-right .yd-datetime-input, .yd-cell-right input[type=date], .yd-cell-right input[type=datetime-local], .yd-cell-right input[type=email], .yd-cell-right input[type=number]:not(.yd-spinner-input), .yd-cell-right input[type=password], .yd-cell-right input[type=tel], .yd-cell-right input[type=text], .yd-cell-right input[type=time], .yd-cell-right input[type=url] {
            text-align: right;
        }
    }
    
    .yd-btn-block,.yd-cell-box {
        margin: 0;
    }
    .div-check {
        padding: 20px 0 11px 15px;
    }
    
}
.apply-contract {
   .yd-cell {
        background: #fff;
        height: 100vh;
    } 
    .btn-footer {
        width: 90%;
        margin: auto;
    }
}

